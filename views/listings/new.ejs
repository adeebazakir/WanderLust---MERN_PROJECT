<% layout("/layouts/boilerplate") -%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
    <h2 class="mt-3">
        Create a New Listing
    </h2>
    <form method="post" action="/listings">
        <div class="mb-3">
            <label class="form-label" for="title" >Title</label>
            <input name="listing[title]" placeholder="Enter a catchy title" type="text" class="form-control">
        </div>

        <div class="mb-3"> 
            <label class="form-label" for="description" >Description</label>
            <textarea name="listing[description]" placeholder="Enter description" class="form-control"></textarea>

        </div>
        
        <div class="mb-3">
            <label class="form-label" for="image">Image Link</label>
            <input name="listing[image]" placeholder="Enter image URL/Link" type="text" class="form-control">
        </div>
        
        <div class="mb-3">
            <label class="form-label" for="price">Price</label>
            <input name="listing[price]" placeholder="2500" type="number" class="form-control">
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <label class="form-label" for="location">Location</label>
                <input name="listing[location]" placeholder="Jaipur, Rajasthan" type="text" class="form-control">
            </div>

            <div class="mb-3 col-md-8">
                <label class="form-label" for="country">Country</label>
                <input name="listing[country]" placeholder="India" type="text" class="form-control">
            </div>
        </div>
       
        <button type="submit" class="btn btn-dark mb-3">
            Add
        </button>
        
    </form>
    </div>
    </div>
</body>
